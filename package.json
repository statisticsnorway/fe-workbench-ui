{
  "name": "workbench-ui",
  "version": "0.1.2",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/statisticsnorway/fe-workbench-ui"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.1",
    "apollo-boost": "^0.4.3",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.3",
    "apollo-link-http": "^1.5.15",
    "chart.js": "^2.8.0",
    "graphql": "^14.3.0",
    "graphql-request": "^1.8.2",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "node.js": "^0.0.0",
    "oidc-client": "^1.9.0",
    "react": "^16.6.3",
    "react-chartjs-2": "^2.7.4",
    "react-dom": "^16.6.3",
    "react-graph-vis": "^1.0.5",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.3.0",
    "react-table-6": "^6.11.0",
    "react-treebeard": "^3.2.4",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:dev": "export REACT_APP_ENV=development && chmod +x ./scripts/read_env_var.sh && ./scripts/read_env_var.sh && cp env-var.js ./public/ && react-scripts start",
    "build": "node ./node_modules/react-scripts/bin/react-scripts.js build",
    "test": "react-scripts test --verbose=false --watchAll=true",
    "coverage": "node ./node_modules/react-scripts/bin/react-scripts.js test --coverage --watchAll=false",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "faker": "^4.1.0",
    "mockserver": "^3.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/index.js",
      "!src/media/**",
      "!src/mocks/**",
      "!src/properties/**",
      "!src/__tests__/test-data/**",
      "!src/utilities/fetch/Fetch.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 40,
        "lines": 45,
        "statements": 45
      }
    }
  },
  "resolutions": {
    "micromatch": "^4.0.0"
  }
}
